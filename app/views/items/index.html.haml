.body
  .body__header
    .body__header__main
      = link_to("Furima-app", root_path, {class: "body__header__main__title"})
      .body__header__main__form
        .body__header__main__form__field
          %input.hoge{type: "search", placeholder: "キーワードで検索"}/
        .body__header__main__form__button
          = icon('fa', 'search')
  .body__center
    .body__center__topic
      .body__center__topic__items
        .body__center__topic__items__category
          カテゴリ
        .body__center__topic__items__brand
          ブランド
      .body__center__topic__users
        - if user_signed_in?
          = link_to("マイページ", user_path(current_user.id), {class: "body__center__topic__users__login"})
        - else
          = link_to("ログイン", new_user_session_path, {class: "body__center__topic__users__login"})
          = link_to("新規登録", new_user_path, {class: "body__center__topic__users__register"})
